<div class="banner" >
  <div class="container mt-4">
    <h1 class='text-center'><%= @list.name %></h1>
  </div>
</div>

<div class="container mt-4">
<div class="row">
  <div class="col-sm-6">
  <% @bookmark.each do |bookmark| %>
  <div class="card" style="width: 18rem;">
    <img src="<%= bookmark.movie.poster_url %>" class="card-img-top" alt="...">
    <div class="card-body">
      <h5 class="card-title"><%= bookmark.movie.title %></h5>
       <%= link_to bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: 'Are you sure?'}, class:" align-items-center " do %>
          <i class="fa-solid fa-trash remove"></i>
        <% end %>
    </div>
  </div>
  </div>
  <% end %>
  </div>
</div>


<div class="container mt-4 text-center">
   <%= link_to "Add a movie", new_list_bookmark_path(@list), class:"btn btn-primary my-4" %>
</div>
